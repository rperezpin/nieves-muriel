---
import { books } from "../data/content";
---

<section id="books" class="section section-alt">
    <div class="container">
        <h2>Libros Publicados</h2>
        <div class="book-grid">
            {
                books.map((book) => (
                    <div class="book-card">
                        <div class="book-year">{book.year}</div>
                        <h3 class="book-title">{book.title}</h3>
                        <p class="book-meta">
                            {book.authors && (
                                <span class="author">{book.authors}. </span>
                            )}
                            <span class="publisher">{book.publisher}</span>
                        </p>
                        <p class="book-type">{book.type}</p>
                        {book.award && (
                            <p class="book-award">üèÜ {book.award}</p>
                        )}
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .book-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .book-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--color-bg-alt); /* Light border */
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .book-year {
        font-family: var(--font-heading);
        color: var(--color-accent);
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .book-title {
        font-size: 1.5rem;
        line-height: 1.3;
        margin-bottom: 1rem;
        color: var(--color-text);
    }

    .book-meta {
        color: var(--color-text-secondary);
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .book-type {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--color-primary-light);
        font-weight: 600;
    }

    .book-award {
        margin-top: 1rem;
        font-size: 0.9rem;
        color: var(--color-primary);
        font-style: italic;
        border-top: 1px solid var(--color-bg-alt);
        padding-top: 0.5rem;
    }
</style>
