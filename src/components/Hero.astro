---
import { bio } from "../data/content";
---

<section id="about" class="hero-section">
    <div class="container hero-content">
        <div class="image-container">
            <!-- Placeholder SVG -->
            <svg
                width="250"
                height="250"
                viewBox="0 0 250 250"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <circle
                    cx="125"
                    cy="125"
                    r="120"
                    stroke="#7FDBDA"
                    stroke-width="2"></circle>
                <circle cx="125" cy="125" r="110" fill="#E8F6F6"></circle>
                <text
                    x="50%"
                    y="50%"
                    dominant-baseline="middle"
                    text-anchor="middle"
                    font-family="serif"
                    font-size="80"
                    fill="#0D7377">NM</text
                >
            </svg>
        </div>
        <div class="text-container">
            <h1>{bio.name}</h1>
            <p class="subtitle">{bio.role}</p>
            <div class="bio-text">
                {bio.description.map((paragraph) => <p>{paragraph}</p>)}
                <p class="meta">{bio.location}</p>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        padding-top: 8rem; /* Account for fixed header */
        padding-bottom: 4rem;
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    .hero-content {
        display: flex;
        align-items: center;
        gap: 4rem;
    }

    .image-container svg {
        display: block;
        max-width: 100%;
        height: auto;
    }

    .text-container {
        flex: 1;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: var(--color-primary);
    }

    .subtitle {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
        font-style: italic;
    }

    .bio-text p {
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .meta {
        font-size: 0.9rem;
        color: var(--color-text-secondary);
        margin-top: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    @media (max-width: 768px) {
        .hero-content {
            flex-direction: column;
            text-align: center;
            gap: 2rem;
        }
    }
</style>
